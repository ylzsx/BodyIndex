<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        app:cardCornerRadius="4dp"
        android:elevation="5dp"
        android:layout_width="310dp"
        android:layout_height="165dp">

        <ImageView
            android:scaleType="fitXY"
            android:src="@drawable/ic_main_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="right"
            android:layout_width="210dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginTop="40dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="4dp"
                    android:text="你好，"
                    android:textColor="@color/main_dark_blue"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_phone"
                    android:text="13081856470"
                    android:textStyle="bold"
                    android:textColor="@color/main_dark_blue"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="40dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_modify_password"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:textSize="16sp"
                    android:text="修改密码"
                    android:textColor="@color/main_light_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_logout"
                    android:layout_margin="10dp"
                    android:text="退出登录"
                    android:textSize="16sp"
                    android:textColor="@color/main_light_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        app:cardCornerRadius="4dp"
        android:elevation="5dp"
        android:layout_width="310dp"
        android:layout_height="165dp">

        <ImageView
            android:scaleType="fitXY"
            android:src="@drawable/ic_main_heart_rate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="right"
            android:layout_width="210dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginTop="30dp"
                android:textSize="20sp"
                android:textColor="@color/main_dark_red"
                android:textStyle="bold"
                android:layout_marginLeft="4dp"
                android:text="当前心率："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:id="@+id/tv_heart_rate"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="89"
                    android:textColor="@color/main_heart_normal"
                    android:textSize="55sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

                <TextView
                    android:text="次/分"
                    android:layout_gravity="bottom"
                    android:textSize="20sp"
                    android:textColor="@color/main_light_yellow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/img_heart_detail"
                android:layout_margin="10dp"
                android:layout_gravity="right"
                android:src="@drawable/ic_heart_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        app:cardCornerRadius="4dp"
        android:elevation="5dp"
        android:layout_width="310dp"
        android:layout_height="165dp">

        <ImageView
            android:scaleType="fitXY"
            android:src="@drawable/ic_main_temperature"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="right"
            android:layout_width="210dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginTop="30dp"
                android:textSize="20sp"
                android:textColor="@color/main_dark_green"
                android:textStyle="bold"
                android:layout_marginLeft="4dp"
                android:text="当前体温："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:id="@+id/tv_temperature"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="38"
                    android:textColor="@color/main_temperature_height"
                    android:textSize="55sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_gravity="bottom"
                    android:src="@drawable/ic_centigrade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/img_temperature_detail"
                android:layout_margin="10dp"
                android:layout_gravity="right"
                android:src="@drawable/ic_temperature_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_margin="5dp"
        android:layout_gravity="right"
        android:textColor="@color/orange"
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>