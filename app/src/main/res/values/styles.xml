<resources>

    <!-- 设置无ActionBar-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--应用的主要色调，actionBar默认使用该颜色，Toolbar导航栏的底色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--应用的主要暗色调，statusBarColor默认使用该颜色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--控件选中后的颜色-->
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="toolbar_style" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="toolbar_theme">
        <item name="colorControlNormal">@color/white</item>
    </style>


    <style name="edt_login">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:textColorHint">@color/more_light_grey</item>
        <item name="android:background">@drawable/shape_login_edt</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">45dp</item>
    </style>

    <style name="btn_login">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_btn</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- 设置无ActionBar-->
    <style name="HeartDetailTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--应用的主要色调，actionBar默认使用该颜色，Toolbar导航栏的底色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--应用的主要暗色调，statusBarColor默认使用该颜色-->
        <item name="colorPrimaryDark">@color/heart_detail_red</item>
        <!--控件选中后的颜色-->
        <item name="colorAccent">@color/colorAccent</item>
    </style>





</resources>
